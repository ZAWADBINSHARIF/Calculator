<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="OperationButtonStyle">
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/actionBtn</item>
        <item name="android:textSize">@dimen/operationBtn</item>
        <item name="android:textColor">@color/actionBtnTextColor</item>

    </style>

    <style name="NumberButtonStyle">
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/numberBtn</item>
        <item name="android:textSize">@dimen/numberBtn</item>
        <item name="android:onClick">onDigit</item>
        <item name="android:textColor">@color/numberBtnTextColor</item>
    </style>

    <style name="EqualBtnStyle">
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/actionBtn</item>
        <item name="android:textSize">@dimen/equalBtn</item>
        <item name="android:textColor">@color/actionBtnTextColor</item>

    </style>

</resources>